<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buscamina"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:debuggable="true">
        <activity 
            android:name="com.example.buscamina.PantallaDeInicio"
            android:label="@string/titulo_inicio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            
        </activity>
       
        
        <activity 
            android:name="com.example.buscamina.PantallaMenu"
            android:label="@string/titulo_menu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action  android:name="com.example.gridview.pantalla_menu.PRINCIPALUNO" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity
            
            android:name="com.example.buscamina.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="com.example.gridview.pantalla_de_inicio.PRINCIPAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            
            android:name="com.example.buscamina.Creditos"
            android:label="@string/app_creditos" 
            android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="com.example.gridview.creditos.PRINCIPAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            
            android:name="com.example.buscamina.Instrucciones"
            android:label="@string/app_instrucciones" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.gridview.instrucciones.PRINCIPAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            
            android:name="com.example.buscamina.Configuracion"
            android:label="@string/app_configuracion" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.gridview.configuracion.PRINCIPAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         
        
          
    </application>

</manifest>
